<!-- pages/addressList/addressList.wxml -->

<scroll-view class="scroll" scroll-y="true">
  <view wx:for="{{addressList}}">
    <view class="product-name-wrap">
      <view class="ui-list-item-info">{{item.consignee}}
        <text decode="{{true}}" space="{{true}}">&nbsp;&nbsp;</text> {{item.mobile}}
      </view>
      <view class="ui-list-item-address">
        {{item.address}}
      </view>

      <view class="ui-list-item-time">
        <p>{{item.transportDay}}</p>
        <image class="ui-list-item-del" src="../../images/mine_img/mine_del.png" data-id="{{index}}" bindtap="delAddress"></image>
      </view>

      <view class="separate"></view>

    </view>
  </view>
</scroll-view>

<view class="add-address" bindtap="addAddress">
  <image class="add-img" src="../../images/mine_img/mine_add.png"></image>
  <p>添加地址</p>
</view>