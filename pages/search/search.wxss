/* pages/search/search.wxss */
@import "../../templates/goods_list/goods_list.wxss";
page{
    background: #ebebeb;
}
.weui-search-bar{
    background: #f0145a;
}
.weui-search-bar__cancel-btn{
    color: #fff;
    font-size: 12pt;
}


/*搜索下拉框*/

.search-list{
    width: 100%;
    display: flex;
    flex-direction: column;
    position: fixed;
    z-index: 2;
    background: #fff;
}
.search-list .search-item{
    display: inline-block;
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 8rpx 30rpx;
    border-bottom: 1rpx solid #c6c6c6;
    font-size: 10pt;
}
.search-list .search-item:last-child{
    border-bottom: none;
}
.search-list.hidden{
    display: none;
}