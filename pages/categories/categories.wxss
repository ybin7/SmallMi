/* pages/categories/categories.wxss */

page, .main {
  height: 100vh;
}

.main {
  display: flex;
  flex-direction: row;
  height: 100%;
  width: 100%;
  background: #fff;
}

/* 顶部搜索栏 */

.section {
  width: 100%;
}

.searchBar {
  display: flex;
  justify-content: center;
  height: 100rpx;
  background: #f0145a;
  position: fixed;
}

.searchBar .searBar-box {
  display: inline-block;
  width: 95%;
  height: 60rpx;
  margin-top: 22rpx;
  border-radius: 40rpx;
  background: #fff;
}

.searBar-box.tap {
  background: rgba(255, 247, 231, 0.9);
}

.search-plac {
  text-align: center;
  font-size: 11pt;
  margin-top: 4rpx;
}

.searBar-box .search-icon {
  position: absolute;
  left: 45rpx;
  top: 32rpx;
  width: 44rpx;
  height: 44rpx;
}

.searBar-box input {
  margin-left: -170px;
  margin-top: 8rpx;
}

/* 分类 */

.category-cont {
  display: flex;
  margin-top: 100rpx;
}

.category-left {
  display: flex;
  flex-direction: column;
  width: 170rpx;
  border-right: 1px solid #dcdcdc;
  text-align: center;
  background: #f5f5f5;
}

.cate-nav-list {
  border-bottom: 1rpx solid #dedede;
}

.cate-nav-list.active {
  background: #fff;
  color: #f0145a;
}

.cate-name {
  display: inline-block;
  font-size: 10pt;
  line-height: 40px;
  height: 40px;
}

.category-right {
  display: flex;
  flex-direction: column;
  background:#f2f2f2;
}

.cate-content {
  /* border: 1px solid #000; */
  margin-top: 40rpx;
}

.cate-list-content {
  margin-top: 40rpx;
  height: 100vh;
}

.cate-list-content:nth-child(1) {
  margin-top: 0;
}

.cate-content .header {
  height: 90rpx;
  line-height: 90rpx;
  font-size: 11pt;
  text-align: center;
}

.cate-list {
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  flex-wrap: wrap;
  /* border: 1px solid #ff4a00; *//* height: 300rpx; *//* margin-top: 90rpx; */
}

.cate-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 150rpx;
  height: 150rpx;
  /* margin-top: 30rpx;
    margin-bottom: 30rpx; */
  margin: 14rpx 26rpx;
  /* border: 1px solid #f00; */
}

.cate-item image {
  display: inline-block;
  width: 120rpx;
  height: 120rpx;
}

.cate-item text {
  display: inline-block;
  font-size: 24rpx;
  margin-top: 16rpx;
}

.banner {
  width: 500rpx;
  height: 200rpx;
  margin: 0 auto;
}

.banner image {
  width: 100%;
  height: 100%;
}
