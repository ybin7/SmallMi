/* pages/paymentStatus/paymentStatus.wxss */
.paymentStatus {
  font-size: 28rpx;
}

.paymentStatus .paymentHeader {
  background-color: #f6f6f6;
  padding: 100rpx 20rpx 20rpx;
  text-align: center;
  color: gray;
  position: relative;
}

.paymentStatus .paymentHeader image {
  width: 400rpx;
  height: 200rpx;
  margin: 0 auto;
  display: block;
  z-index: 2;
  position: relative;
}

.paymentStatus .paymentHeader .title {
  font-size: 32rpx;
  margin-top: 40rpx;
  z-index: 2;
  position: relative;
}

.paymentStatus .paymentHeader .content {
  font-size: 24rpx;
  margin-top: 20rpx;
  z-index: 2;
  position: relative;
}

.paymentStatus .paymentHeader .paymentBackground {
  width: 140%;
  height: 200rpx;
  border-radius: 0 0 200% 200%;
  background-color: #f6f6f6;
  position: absolute;
  left: -20%;
  bottom: -40rpx;
}

.paymentStatus .paymentBtn {
  margin-top: 100rpx;
  text-align: center;
}

.paymentStatus .paymentBtn .back {
  padding: 20rpx 30rpx;
  border: 1px solid #f0145a;
  display: inline-block;
  border-radius: 6rpx;
  color: #f0145a;
  margin: 0 20rpx;
}

.paymentStatus .paymentBtn .back.order {
  color: #fff;
  background-color: #f0145a;
}
